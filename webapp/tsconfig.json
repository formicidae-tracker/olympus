{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist/out-tsc",
		"downlevelIteration": true,
		"sourceMap": true,
		"declaration": false,
		"module": "es2020",
    "moduleResolution": "node",
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2018",
			"dom"
		],
		"paths": {
			"@models/*":["src/app/core/models/*"],
			"@services/*":["src/app/core/services/*"],
			"@modules/*":["src/app/core/modules/*"],
			"@environments/*":["src/environments/*"]
		}
	}
}
